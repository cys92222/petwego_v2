<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.FollowDao">
	
	<insert id="insertFollow">
		insert into follow values(seq_f_no.nextval, #{photo_no}, #{user_id})
	</insert>
	
	<delete id="deleteFollow">
		delete follow where photo_no = #{photo_no}  <!--  and user_id = #{user_id} -->
	</delete>
	
	<select id="checkFollow" resultType="java.lang.Integer">
		select count(*) from follow where photo_no = #{photo_no} and user_id = #{user_id}
	</select>

</mapper>
